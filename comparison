<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>London Office Locations</title>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />
    <style>
        #map { height: 600px; width: 100%; }
    </style>
</head>
<body>

    <h2>London Office Locations Map</h2>
    <div id="map"></div>

    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
    <script>
        var map = L.map('map').setView([51.513, -0.127], 14); // Center on London

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; OpenStreetMap contributors'
        }).addTo(map);

        // Locations
        var locations = [
            { coords: [51.5115, -0.128], text: "📍 <b>Endeavour</b><br>London WC2H 8JR" },
            { coords: [51.5162, -0.119], text: "📍 <b>Canvas</b><br>175 High Holborn, London WC1V 7AA<br>💰 £690 per desk<br>🏢 Comparable Building" },
            { coords: [51.5145, -0.1308], text: "📍 <b>Cubo</b><br>Ilona Rose House, Manette St, London W1D 4AL<br>💰 £850 per desk<br>🏢 Better Building" }
        ];

        locations.forEach(function(location) {
            L.marker(location.coords).addTo(map)
                .bindPopup(location.text);
        });
    </script>

</body>
</html>
